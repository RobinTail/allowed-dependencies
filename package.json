{
  "name": "eslint-plugin-allowed-dependencies",
  "description": "ESLint plugin Allowed Dependencies",
  "version": "0.5.0",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobinTail/allowed-dependencies.git"
  },
  "homepage": "https://github.com/RobinTail/allowed-dependencies",
  "author": {
    "name": "Anna Bocharova",
    "url": "https://robintail.cz"
  },
  "files": [
    "dist",
    "*.md"
  ],
  "scripts": {
    "build": "tsup && attw --pack",
    "lint": "biome check",
    "test": "tsc --noEmit && vitest --run --coverage src",
    "mdfix": "prettier *.md --write",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "yarn lint && yarn test && yarn build"
  },
  "dependencies": {
    "ramda": "^0.30.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@biomejs/biome": "1.8.3",
    "@eslint/eslintrc": "^3.1.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.2.0",
    "@types/ramda": "^0.30.1",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/rule-tester": "^8.1.0",
    "@vitest/coverage-istanbul": "^2.0.5",
    "eslint": "^9.9.0",
    "json-schema-to-ts": "^3.1.0",
    "prettier": "^3.3.3",
    "semver": "^7.6.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || ^22.0.0"
  },
  "keywords": [
    "modules",
    "eslint",
    "eslint-plugin",
    "import",
    "eslint-rules",
    "dependencies",
    "eslintplugin",
    "restriction",
    "external-dependency",
    "exhaustive",
    "extraneous"
  ]
}
